@page
@model UI.Pages.Projects.CustomerHistoryModel

@{
    ViewData["Title"] = "CustomerHistory";
}

<div>
    <a asp-page="./ProjectsList">Back to List</a>
</div>

<h1>Lịch sử dự án đăng</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Trạng thái")
            </th>
            <th>
                @Html.DisplayName("Địa chỉ")
            </th>
            <th>
                @Html.DisplayName("Ngày bắt đầu")
            </th>
            <th>
                @Html.DisplayName("Ngày kết thúc ")
            </th>
            <th>
                @Html.DisplayName("Tên dự án")
            </th>
            <th>
                @Html.DisplayName("Mô tả")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Project) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectContent)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>

<h1>Lịch sử dự án đã booking đi xem</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Tên người đặt")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Booking[0].ProductId)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Booking)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductId)
                </td>
            </tr>
        }
    </tbody>
</table>